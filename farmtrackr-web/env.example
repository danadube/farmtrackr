# Environment variables for FarmTrackr Web App
# Copy this file to .env.local for local development

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=FarmTrackr
NEXT_PUBLIC_APP_DESCRIPTION=Farm CRM Application

# Database (for future use)
# DATABASE_URL="postgresql://username:password@localhost:5432/farmtrackr"

# Google Sheets API (for future use)
# GOOGLE_SHEETS_CLIENT_ID="your-client-id"
# GOOGLE_SHEETS_CLIENT_SECRET="your-client-secret"
# GOOGLE_SHEETS_REDIRECT_URI="your-redirect-uri"

# Authentication (for future use)
# NEXTAUTH_URL="https://your-domain.vercel.app"
# NEXTAUTH_SECRET="your-secret-key"

# File Upload (for future use)
# UPLOAD_MAX_SIZE=10485760
# ALLOWED_FILE_TYPES="pdf,doc,docx,xlsx,csv"

# Analytics (for future use)
# GOOGLE_ANALYTICS_ID="your-ga-id"
